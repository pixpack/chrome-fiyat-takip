document.addEventListener('DOMContentLoaded', function() {
  // Background script'i uyandır
  chrome.runtime.sendMessage({ action: 'ping' }, (response) => {
    console.log('Background script aktif:', response);
  });
  
  loadTrackedItems();

  document.getElementById('start-picker').addEventListener('click', async () => {
    const [tab] = await chrome.tabs.query({ active: true, currentWindow: true });
    
    await chrome.tabs.sendMessage(tab.id, { action: 'startPicker' });
    window.close();
  });

  document.getElementById('use-current-page').addEventListener('click', async () => {
    const [tab] = await chrome.tabs.query({ active: true, currentWindow: true });
    document.getElementById('url').value = tab.url;
  });

  document.getElementById('test-selector').addEventListener('click', async () => {
    const selector = document.getElementById('selector').value;
    if (!selector) {
      alert('Lütfen bir CSS seçici girin!');
      return;
    }

    const [tab] = await chrome.tabs.query({ active: true, currentWindow: true });
    
    try {
      const result = await chrome.scripting.executeScript({
        target: { tabId: tab.id },
        func: testSelector,
        args: [selector]
      });

      if (result[0].result.success) {
        alert(`Başarılı! Bulunan fiyat: ${result[0].result.price}\nElement: ${result[0].result.element}`);
      } else {
        alert(`Hata: ${result[0].result.error}`);
      }
    } catch (error) {
      alert(`Hata: ${error.message}`);
    }
  });

  document.getElementById('add-tracker').addEventListener('click', async () => {
    const url = document.getElementById('url').value;
    const selector = document.getElementById('selector').value;
    const productName = document.getElementById('product-name').value;

    if (!url || !selector) {
      alert('URL ve CSS seçici gerekli!');
      return;
    }

    const tracker = {
      id: Date.now().toString(),
      url: url,
      selector: selector,
      productName: productName || 'İsimsiz Ürün',
      priceHistory: [],
      lastChecked: null,
      createdAt: new Date().toISOString()
    };

    try {
      const response = await fetch(url);
      const html = await response.text();
      const parser = new DOMParser();
      const doc = parser.parseFromString(html, 'text/html');
      const element = doc.querySelector(selector);
      
      if (element) {
        const price = extractPrice(element.textContent);
        tracker.priceHistory.push({
          price: price,
          date: new Date().toISOString()
        });
        tracker.lastChecked = new Date().toISOString();
      }
    } catch (error) {
      console.error('İlk fiyat alınamadı:', error);
    }

    chrome.storage.local.get(['trackers'], (result) => {
      const trackers = result.trackers || [];
      trackers.push(tracker);
      chrome.storage.local.set({ trackers: trackers }, () => {
        alert('Takip eklendi!');
        document.getElementById('url').value = '';
        document.getElementById('selector').value = '';
        document.getElementById('product-name').value = '';
        loadTrackedItems();
      });
    });
  });
});

function testSelector(selector) {
  try {
    const element = document.querySelector(selector);
    if (!element) {
      return { success: false, error: 'Element bulunamadı!' };
    }
    const text = element.textContent.trim();
    const price = text.match(/[\d.,]+/);
    return {
      success: true,
      price: price ? price[0] : 'Fiyat formatı bulunamadı',
      element: text.substring(0, 50)
    };
  } catch (error) {
    return { success: false, error: error.message };
  }
}

function extractPrice(text) {
  const cleaned = text.replace(/[^\d.,]/g, '');
  const price = parseFloat(cleaned.replace(',', '.'));
  return isNaN(price) ? null : price;
}

function formatPrice(price, currency = 'TRY') {
  if (!price) return 'Bilinmiyor';
  
  const currencySymbols = {
    'USD': '$',
    'EUR': '€',
    'GBP': '£',
    'JPY': '¥',
    'TRY': '₺',
    'CAD': 'CA$',
    'AUD': 'A$',
    'CHF': 'CHF',
    'CNY': '¥',
    'INR': '₹',
    'RUB': '₽'
  };
  
  const symbol = currencySymbols[currency] || currency;
  
  // Fiyatı formatta göster
  const formatted = new Intl.NumberFormat('tr-TR', {
    minimumFractionDigits: 2,
    maximumFractionDigits: 2
  }).format(price);
  
  // Para birimi sembolünü ekle
  if (currency === 'USD' || currency === 'EUR' || currency === 'GBP') {
    return `${symbol}${formatted}`;
  } else {
    return `${formatted} ${symbol}`;
  }
}

function loadTrackedItems() {
  chrome.storage.local.get(['trackers'], (result) => {
    const trackers = result.trackers || [];
    const itemsList = document.getElementById('items-list');
    const itemsCount = document.getElementById('items-count');
    
    itemsCount.textContent = trackers.length;
    
    if (trackers.length === 0) {
      itemsList.innerHTML = '<div class="bg-white rounded-lg shadow-sm p-4 text-center"><p class="text-sm text-gray-500">Henüz takip edilen ürün yok</p></div>';
      return;
    }

    itemsList.innerHTML = '';
    trackers.forEach((tracker, index) => {
      const div = document.createElement('div');
      div.className = 'bg-white rounded-lg shadow-lg p-3 hover:border hover:border-red-500 transition-all';
      
      const latestPrice = tracker.priceHistory[tracker.priceHistory.length - 1];
      const previousPrice = tracker.priceHistory.length > 1 ? 
        tracker.priceHistory[tracker.priceHistory.length - 2] : null;
      
      let statusClass = 'same';
      let statusText = 'Değişmedi';
      
      if (previousPrice) {
        if (latestPrice.price > previousPrice.price) {
          statusClass = 'up';
          statusText = '↑ Arttı';
        } else if (latestPrice.price < previousPrice.price) {
          statusClass = 'down';
          statusText = '↓ Düştü';
        }
      }

      const imageHtml = tracker.productImage ? 
        `<img src="${tracker.productImage}" class="w-full h-32 object-cover rounded-lg mb-2" onerror="this.remove()">` : '';
      
      const faviconHtml = tracker.favicon ? 
        `<img src="${tracker.favicon}" class="w-4 h-4 inline-block mr-1" onerror="this.style.display='none'">` : '';
      
      const statusBadge = previousPrice ? 
        `<span class="px-2 py-1 rounded-full text-xs font-semibold ${
          statusClass === 'up' ? 'bg-red-100 text-red-800' :
          statusClass === 'down' ? 'bg-green-100 text-green-800' :
          'bg-blue-100 text-blue-800'
        }">${statusText}</span>` : '';
      
      div.innerHTML = `
        ${imageHtml}
        <div class="flex items-start justify-between mb-2">
          <div class="flex-1">
            <div class="flex items-center mb-1">
              ${faviconHtml}
              <h3 class="font-semibold text-sm text-gray-900 truncate">${tracker.productName}</h3>
            </div>
            <p class="text-xs text-gray-500 truncate">${new URL(tracker.url).hostname}</p>
          </div>
          ${statusBadge}
        </div>
        
        <div class="mb-3">
          <div class="text-2xl font-bold coral-accent">${latestPrice ? formatPrice(latestPrice.price, tracker.currency) : '-'}</div>
          <div class="text-xs text-gray-500">${tracker.priceHistory.length} kayıt • ${tracker.selector}</div>
        </div>
        
        <div class="grid grid-cols-2 gap-2">
          <button onclick="checkPrice('${tracker.id}')" class="bg-blue-600 text-white py-1.5 px-3 rounded-lg text-xs font-semibold hover:bg-blue-700 transition-colors">
            Kontrol Et
          </button>
          <button onclick="removeTracker('${tracker.id}')" class="bg-red-600 text-white py-1.5 px-3 rounded-lg text-xs font-semibold hover:bg-red-700 transition-colors">
            Sil
          </button>
        </div>
      `;
      
      itemsList.appendChild(div);
    });
  });
}

window.removeTracker = function(id) {
  chrome.storage.local.get(['trackers'], (result) => {
    const trackers = result.trackers || [];
    const filtered = trackers.filter(t => t.id !== id);
    chrome.storage.local.set({ trackers: filtered }, loadTrackedItems);
  });
};

window.checkPrice = async function(id) {
  chrome.storage.local.get(['trackers'], async (result) => {
    const trackers = result.trackers || [];
    const tracker = trackers.find(t => t.id === id);
    
    if (!tracker) return;

    try {
      const response = await fetch(tracker.url);
      const html = await response.text();
      const parser = new DOMParser();
      const doc = parser.parseFromString(html, 'text/html');
      const element = doc.querySelector(tracker.selector);
      
      if (element) {
        const price = extractPrice(element.textContent);
        if (price) {
          tracker.priceHistory.push({
            price: price,
            date: new Date().toISOString()
          });
          tracker.lastChecked = new Date().toISOString();
          
          chrome.storage.local.set({ trackers: trackers }, () => {
            alert(`Fiyat güncellendi: ${formatPrice(price, tracker.currency)}`);
            loadTrackedItems();
          });
        }
      }
    } catch (error) {
      alert(`Fiyat kontrol edilemedi: ${error.message}`);
    }
  });
};
